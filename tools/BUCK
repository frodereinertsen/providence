genrule(
  name = 'mvn_fetch_init',
  cmd = 'mvn org.apache.maven.plugins:maven-dependency-plugin:2.1:get ' +
        '-Dartifact=org.json:json:20141113 ' +
        '-DrepoUrl=http://repo1.maven.org/maven2 > $OUT',
  out = 'mvn_fetch_init.out',
)

python_binary(
  name = 'mvn_fetch',
  main = 'mvn_fetch.py',
  visibility = ['PUBLIC'],
  deps = [
    ':mvn_fetch_init',
  ]
)
