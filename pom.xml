<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>
    <name>Providence</name>
    <description>
        Providence is a port of Apache thrift that has some extra tooling, and
        different way of generating classes and serializing data.
    </description>

    <licenses>
        <license>
            <name>Apache License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <scm>
        <url>https://github.com/morimekta/providence.git</url>
    </scm>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <java.version>1.8</java.version>
        <slf4j.version>1.7.12</slf4j.version>
        <thrift.version>0.9.3</thrift.version>
        <jackson.version>2.4.2</jackson.version>
        <junit.version>4.12</junit.version>
        <hamcrest.version>1.3</hamcrest.version>
        <mockito.version>1.10.17</mockito.version>

        <args4j.version>2.32</args4j.version>

        <morimekta_utils.version>0.2.0</morimekta_utils.version>
    </properties>

    <groupId>net.morimekta.providence</groupId>
    <artifactId>providence</artifactId>
    <version>0.0.1-SNAPSHOT</version>

    <packaging>pom</packaging>

    <modules>
        <!-- the real core. -->
        <module>providence-core</module>
        <module>providence-core-jackson</module>
        <module>providence-core-streams</module>
        <module>providence-reflect</module>

        <!-- utility libraries -->
        <module>providence-thrift</module>
        <module>providence-messageio</module>
        <module>providence-testing</module>
        <!-- internal and utilities -->
        <module>providence-internal</module>
        <module>providence-tools-generator</module>
        <module>providence-tools-generator-testing</module>
        <module>providence-tools-generator-maven-plugin</module>
        <module>providence-tools</module>
    </modules>
</project>
