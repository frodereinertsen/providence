<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <java.version>1.8</java.version>
        <slf4j.version>1.7.12</slf4j.version>
        <providence.version>0.0.1-SNAPSHOT</providence.version>
        <thrift.version>0.9.3</thrift.version>
        <jackson.version>2.4.2</jackson.version>
    </properties>

    <groupId>net.mormekta.providence</groupId>
    <artifactId>providence</artifactId>
    <version>${providence.version}</version>

    <packaging>pom</packaging>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>net.mormekta.providence</groupId>
                <artifactId>providence-core</artifactId>
                <version>${providence.version}</version>
                <scope>provided</scope>
            </dependency>
            <dependency>
                <groupId>net.mormekta.providence</groupId>
                <artifactId>providence-core-jackson</artifactId>
                <version>${providence.version}</version>
                <scope>provided</scope>
            </dependency>
            <dependency>
                <groupId>net.mormekta.providence</groupId>
                <artifactId>providence-thrift</artifactId>
                <version>${providence.version}</version>
                <scope>provided</scope>
            </dependency>
            <dependency>
                <groupId>net.mormekta.providence</groupId>
                <artifactId>providence-reflect</artifactId>
                <version>${providence.version}</version>
                <scope>provided</scope>
            </dependency>
            <dependency>
                <groupId>net.mormekta.providence</groupId>
                <artifactId>providence-testing</artifactId>
                <version>${providence.version}</version>
                <scope>provided</scope>
            </dependency>
            <dependency>
                <groupId>net.mormekta.providence</groupId>
                <artifactId>providence-tools</artifactId>
                <version>${providence.version}</version>
                <scope>provided</scope>
            </dependency>
            <dependency>
                <groupId>net.mormekta</groupId>
                <artifactId>android-util</artifactId>
                <version>0.1</version>
                <scope>provided</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <modules>
        <!-- the real core. -->
        <module>core</module>
        <module>core-jackson</module>
        <module>reflect</module>

        <!-- utility libraries -->
        <module>thrift</module>
        <module>messageio</module>

        <!-- testing and internal utilities -->
        <module>tools</module>
        <module>testing</module>
    </modules>
</project>
